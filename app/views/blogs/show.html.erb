
  <h2><%= @blog.title %></h2>
  <p><%= @blog.blog %></p>
  <h2>Comments</h2>
<div class="comments">
  <% @blog.comments.each do |comment| %>
  <p><%= comment.name %></p>
  <p><%= comment.comment %></p>
  <% end %>
</div>
  <a href="/blogs/<%= @blog.id %>/comments/new" data-remote="true" id="newcomment">Add a comment</a>
