<p id="notice"><%= notice %></p>

<h1>Referals</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @referals.each do |referal| %>
    <td><%= referal.name %></td>
    <td><%= referal.reference %></td>
    <td><%= referal.institution %></td>
      <tr>
        <td><%= link_to 'Show', referal %></td>
        <td><%= link_to 'Edit', edit_referal_path(referal) %></td>
        <td><%= link_to 'Destroy', referal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Referal', new_referal_path %>
